{
  "extends": "./nuxt.tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "types": [
      "node",
      "@nuxt/types",
      "@pinia/nuxt",
      "@nuxtjs/i18n"
    ]
  },
  "include": [
    "components/**/*",
    "layouts/**/*",
    "middleware/**/*",
    "pages/**/*",
    "plugins/**/*",
    "types/**/*.d.ts",
    "app.vue"
  ]
}
